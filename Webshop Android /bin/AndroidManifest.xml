<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenz.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
	<uses-permission android:name="android.permission.READ_OWNER_DATA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/laferrari"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.lenz.app.StartPage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.CreateUser" >
            <intent-filter >
                <action android:name="com.lenz.app.CreateUser" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.LoginActivity" >
            <intent-filter >
                <action android:name="com.lenz.app.LoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.LogoutActivity" >
            <intent-filter >
                <action android:name="com.lenz.app.LogoutActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.CreateProducts" >
            <intent-filter >
                <action android:name="com.lenz.app.CreateProducts" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.ListAllProducts" >
            <intent-filter >
                <action android:name="com.lenz.app.ListAllProducts" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.CreateCategory" >
            <intent-filter >
                <action android:name="com.lenz.app.CreateCategory" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.ListAllCategories" >
            <intent-filter >
                <action android:name="com.lenz.app.ListAllCategories" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lenz.app.ShoppingBasket" >
            <intent-filter >
                <action android:name="com.lenz.app.ShoppingBasket" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.lenz.app.Order" >
            <intent-filter >
                <action android:name="com.lenz.app.Order" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service android:name="com.lenz.app.BackgroundService"></service>
        
    </application>
</manifest>
